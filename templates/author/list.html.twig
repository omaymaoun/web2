
<!DOCTYPE html>
<html>
<head>
    <title>List of Authors</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        img {
            width: 100px; /* Taille de l'image */
        }
    </style>
</head>
<body>
    <h1>List of Authors</h1>
    <!-- Afficher le nombre d'auteurs -->
    <p>Nombre d'auteurs : {{ authors|length }}</p>
<!-- Calculer et afficher le nombre total de livres -->
    {% set totalBooks = 0 %}
    {% for author in authors %}
        {% set totalBooks = totalBooks + author.nbrBooks %}
    {% endfor %}
    <p>Nombre total de livres : {{ totalBooks }}</p>




    <table>
        <thead>
            <tr>
                <th>Details</th> <!-- Nouvelle colonne pour les détails -->
                <th>Picture</th>
                <th>Name</th>
                <th>Email</th>
                <th>Number of Books</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td><a href="{{ path('app_details', { 'name': author.name }) }}">Details</a></td> <!-- Lien vers les détails -->
                    <td><img src="{{ asset(author.picture) }}" alt="{{ author.name }}"></td>
                    <td>{{ author.name|upper }}</td>
                    <td>{{ author.email|upper }}</td>
                    <td>{{ author.nbrBooks|upper }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No authors found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
