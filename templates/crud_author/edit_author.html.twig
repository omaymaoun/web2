{# templates/crud_author/edit_author.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier un Auteur{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            color: #333;
        }

        .form-container {
            width: 50%;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin-top: 50px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #555;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #444;
        }

        input[type="text"], input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        button {
            background-color: #5cb85c;
            color: white;
            padding: 10px 15px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #4cae4c;
        }

        .error {
            color: red;
            font-size: 12px;
        }

        .form-control-error {
            border-color: red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Modifier un Auteur</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }} {# Démarre le formulaire sans validation HTML par défaut #}

        <div class="form-group">
            {{ form_label(form.username) }} {# Affiche le label pour le champ #}
            {{ form_widget(form.username, {'attr': {'class': form.username.vars.valid ? '' : 'form-control-error'}}) }} {# Affiche le champ avec une classe d'erreur si non valide #}
            {{ form_errors(form.username) }} {# Affiche les erreurs liées à ce champ #}
        </div>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': form.email.vars.valid ? '' : 'form-control-error'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <button type="submit">Enregistrer</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
